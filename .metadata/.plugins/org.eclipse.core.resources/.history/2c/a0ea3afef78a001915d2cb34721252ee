package br.com.icarros.gilson.formulaone.utils;

public class StringHelpders {

	/**
	   * Convert the given object to string with each line indented by 4 spaces
	   * (except the first line).
	   */
	public static String toIndentedString(String o) {
		if (o == null) {
			return "null";
		}
		return o.toString().replace("\n", "\n    ");
	}

}
